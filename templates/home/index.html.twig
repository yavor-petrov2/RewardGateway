{% extends 'base.html.twig' %}

{% block title %}RewardGateway API data{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link href='/css/styles.css' rel='stylesheet' type='text/css'/>
{% endblock %}

{% block javascripts %}
    <script src="//code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div id="apiData" class="container">
        <div class="row">
            <div class="col-12">
                <h1>RewardGateway API data</h1>
            </div>
        </div>
        <div class="row">
            {% if people is defined %}
                {% for person in people %}
                    <div class="person col-6 col-sm-4 col-md-3">
                        <div class="avatar" style="background-image: url({{ person.avatar }}), url('data:image/png;base64,');">
                            {#<img src="{{ person.avatar }}" onerror="this.onerror=null;this.src='data:image/png;base64,';" />#}
                        </div>
                        <div class="name">{{ person.name }}</div>
                        <div class="bio">{{ person.bio|raw }}</div>
                        <div class="company">{{ person.company }}</div>
                        <div class="title">{{ person.title }}</div>
                    </div>
                {% endfor %}
            {% elseif error is defined %}
                <div class="col-12">{{ error }}</div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
